{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"standard-with-typescript",
		"plugin:react/recommended",
		"prettier"
	],
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": ["./tsconfig.json"]
	},
	"plugins": [
		"react",
		"prettier"
	],
	"rules": {
		"prettier/prettier": "error",
		"react/react-in-jsx-scope": "off"
	}
}
